{
  "name": "angular-seed",
  "private": true,
  "version": "0.0.0",
  "description": "A starter project for AngularJS",
  "repository": "https://github.com/angular/angular-seed",
  "license": "MIT",
  "devDependencies": {
    "bootstrap": "^3.3.6",
    "bower": "^1.3.1",
    "browserify": "^3.14.0",
    "css-coverage": "0.0.5",
    "doctoc": "^1.0.0",
    "growly": "^1.3.0",
    "http-server": "^0.6.1",
    "istanbul": "^0.4.3",
    "jasmine-core": "^2.3.4",
    "jasmine-jquery": "^2.1.1",
    "karma": "~0.12",
    "karma-chrome-launcher": "^0.1.12",
    "karma-commonjs": "0.0.13",
    "karma-coverage": "^0.5.5",
    "karma-firefox-launcher": "^0.1.7",
    "karma-growl-reporter": "^0.1.1",
    "karma-ie-launcher": "^0.2.0",
    "karma-jasmine": "^0.3.5",
    "karma-jshint-preprocessor": "0.0.6",
    "karma-junit-reporter": "^0.2.2",
    "karma-ng-html2js-preprocessor": "^0.2.1",
    "karma-ng-json2js-preprocessor": "^1.1.2",
    "karma-phantomjs-launcher": "^1.0.0",
    "nodemon": "^1.0.15",
    "phantomjs-prebuilt": "^2.1.7",
    "protractor": "^2.1.0",
    "reactify": "^0.5.1",
    "shelljs": "^0.2.6",
    "uglify-js": "^2.4.8",
    "watchify": "^0.6.2"
  },
  "scripts": {
    "postinstall2": "bower prune && bower install && bower update",
    "postinstall": "bower install",
    "prestart": "npm install",
    "start": "http-server -a localhost -p 8080 -c-1",
    "pretest": "npm install",
    "test-coverage-report": "node_modules/.bin/karma start karma.report.conf.js",
    "test": "node_modules/.bin/karma start karma.conf.js",
    "test-single-run": "node_modules/.bin/karma start karma.conf.js  --single-run",
    "posttest": "npm run build",
    "test2": "karma start --single-run --no-auto-watch",
    "preupdate-webdriver": "npm install",
    "update-webdriver": "webdriver-manager update",
    "preprotractor": "npm run update-webdriver",
    "protractor": "protractor test/e2e/protractor.conf.js",
    "update-index-async": "node -e \"require('shelljs/global'); sed('-i', /\\/\\/@@NG_LOADER_START@@[\\s\\S]*\\/\\/@@NG_LOADER_END@@/, '//@@NG_LOADER_START@@\\n' + sed(/sourceMappingURL=angular-loader.min.js.map/,'sourceMappingURL=bower_components/angular-loader/angular-loader.min.js.map','app/bower_components/angular-loader/angular-loader.min.js') + '\\n//@@NG_LOADER_END@@', 'app/index-async.html');\"",
    "build": "npm run build-js && npm run build-less",
    "build-js": "browerify -t reactify app/js/main.js | uglifyjs -mc > static/bundle.js",
    "build-less": "lessc app/less/main.less static/main.css",
    "watch": "npm run watch-js & npm run watch-less & npm run watch-server",
    "watch-js": "watchify app/js/main.js -t reactify -o static/bundle.js -dv",
    "watch-less": "nodemon --watch app/less/*.less --ext less --exec 'npm run build-less'",
    "watch-server": "nodemon --ignore app --ignore static server.js",
    "deploy": "./bin/deploy.sh"
  }
}
